	<RelativeLayout
	    android:id="@+id/jqm_2_verb"
	    android:onClick="toContent"
	    android:contentDescription="动词 完成阅读"
	    android:layout_marginTop="20dp"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginBottom="70dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:background="@drawable/bg_radias"
	    android:paddingLeft="1.5dp"
	    android:paddingRight="1.5dp"
	    android:paddingTop="15dp" >
	    <TextView
	        android:id="@+id/title2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:paddingLeft="20dp"
	        android:paddingRight="5dp"
	        android:text="Verb"
	        android:textColor="#000"
	        android:textSize="30sp"
	     />
	    <TextView
	        android:id="@+id/second_title2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@id/title2"
	        android:layout_toRightOf="@id/title2"
	        android:paddingRight="1.5dp"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:text="动词，英语王国的路标。"
	        android:textColor="@color/flat_silver"
	        android:typeface="monospace"
	        android:textSize="15sp"/>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_below="@id/title2">
		    <ImageView
		        android:padding="0.5dp"
		        android:id="@+id/img_title2"
		        android:layout_width="fill_parent"
		        android:layout_height="180dp"
		        android:scaleType="fitXY"
		        android:src="@mipmap/img_2_verb"
	        />
		    <TextView
		        android:layout_marginTop="8dp"
		        android:typeface="monospace"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:textSize="15sp"
		        android:lineSpacingExtra="5sp"
		        android:textColor="@color/flat_midnight_light"
		        android:text="动词是表示动作中状态的词。根据其在句中的功能，动词可分为四类，分别是：实义动词、系动词、助动词、情态动词。"
		        android:layout_height="wrap_content"
		    	android:layout_width="fill_parent"
	    	 />
		    <RelativeLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:paddingBottom="5dp"
		        android:layout_gravity="center">
		        <TextView
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_alignParentBottom="true"
		            android:typeface="monospace"
		            android:textColor="@color/flat_gray"
		            android:gravity="center"
		            android:text="上次阅读：2014/03/11 07:35"/>
		    </RelativeLayout>
		</LinearLayout>
	</RelativeLayout>
	
</LinearLayout>