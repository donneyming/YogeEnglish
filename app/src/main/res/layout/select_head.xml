<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yoge="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_red"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/sliding_menu_actionbar_icon"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:layout_marginRight="-32dp"
            android:src="@mipmap/list_icon" />

        <TextView
            android:id="@+id/setting_change_page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/sliding_menu_actionbar_icon"
            android:background="@color/theme_red"
            android:padding="6dp"
            android:text="选择头像"
            android:textColor="@color/theme_white"
            android:textSize="18sp"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/about_us_back"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:src="@mipmap/back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="30dp"
        android:orientation="vertical">
        
     	<me.loppis.ui.RoundedImageView
     	    android:id="@+id/showHead"
	        android:layout_centerHorizontal="true"
	        android:layout_width="64dp"
	        android:layout_height="64dp"
	        android:scaleType="centerCrop"
			yoge:border_thickness="2dp"
	   		yoge:border_color="@color/theme_white"
	   		android:layout_marginBottom="20dp"
	        android:src="@mipmap/guest"/>
  
        
         <Button 
            android:id="@+id/uphead"
           	android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/theme_white"
            android:typeface="monospace"
            android:gravity="center"
            android:background="@drawable/setting_change_page_btn"
            android:textSize="15sp"
            android:text="保存头像"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
         
    </LinearLayout>

</LinearLayout>